<p id="notice"><%= notice %></p>

<h1>Our School's Teachers</h1>

<div class="mbot-20">
  <%= link_to 'New Teacher', new_teacher_path, class: "btn btn-success" %>
</div>

<div class="row">
  <% @teachers.each do |teacher| %>
    <div class="col-md-4">
      <div class="well">
        <h2><%= teacher.name %></h2>
        <p>...teaches <strong><%= teacher.grade_level.ordinalize %> Grade</strong> in <strong>Room <%= teacher.room %></strong></p>
        <p>
          <%= link_to 'Show', teacher, class: "btn btn-primary" %>
          <%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-warning" %>
          <%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </p>
      </div>
    </div>
  <% end %>
</div>